<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Order History</title>
  <link rel="stylesheet" href="../public/style.css">
  <link rel="stylesheet" href="../public/order.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css2?family=Norican&display=swap' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700;800&display=swap' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Philosopher:wght@400;700&family=Poppins:wght@400;500;600&display=swap"
        rel="stylesheet">
 <link href="https://fonts.googleapis.com/css2?family=Philosopher:wght@400;700&family=Poppins:wght@400;500;600&display=swap"
        rel="stylesheet">


</head>

<body>
  

 <header class="header" data-header>
    <div class="container">

      <a href="#" class="logos">ShopiFy</a>

      <nav class="navbar" data-navbar>
        <ul class="navbar-list">

          <li class="navbar-item">
            <a href="../index" class="navbar-links" data-nav-link>Home</a>
          </li>

          <li class="navbar-item">
            <a href="../shop" class="navbar-links" data-nav-link>Shop</a>
          </li>


          <li class="navbar-item">
            <a href="#" class="navbar-links" onclick="toggleDropdown()">Account</a>
            <div class="dropdown-content" id="accountDropdown" style="display: none;">
             
              <a href="../profile" class="file">Profile</a>
              <a href="../order" class="file">My Order</a>
              <a href="#" class="file">Logout</a>
            </div>
          </li>

          <li class="navbar-item">
            <a href="../index/#contact" class="navbar-links" data-nav-link>Contact</a>
          </li>

          <li class="navbar-item">
            <a href="../cart" class="navbar-links" data-nav-link><i class="fa fa-shopping-cart"></i></a>
          </li>

        </ul>
      </nav>

      <button class="nav-toggle-btn" aria-label="toggle menu" data-nav-toggler>
        <ion-icon name="menu-outline" aria-hidden="true" class="open"></ion-icon>

        <ion-icon name="close-outline" aria-hidden="true" class="close"></ion-icon>
      </button>

    </div>
  </header>

   <section class="hero">
    <div class="container py-5 h-100" id="contain">
       
      <div class="row d-flex justify-content-center align-items-center h-100">
        {{#each books}}
        <div class="col-md-10 col-lg-8 col-xl-6">
          
          <div class="card card-stepper" style="border-radius: 16px;" id="card">
            <div class="card-header p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <p class="text-muted mb-2"> Order ID <span class="fw-bold text-body">{{this.or_id}}</span></p>
                  <p class="text-muted mb-0"> Order Date <span class="fw-bold text-body">{{this.order_date}}</span> </p>
                  <p class="text-muted mb-0"> Order_Rec_Date <span class="fw-bold text-body">{{this.order_rec}}</span>
                  </p>
                  <p class="text-muted mb-0"> Name <span class="fw-bold text-body">{{this.u_name}}</span> </p>
                  <p class="text-muted mb-0"> Address <span class="fw-bold text-body">{{this.u_address}}</span> </p>
                  <p class="text-muted mb-0"> Pincode <span class="fw-bold text-body">{{this.pincode}}</span> </p>
                  <p class="text-muted mb-0"> City <span class="fw-bold text-body">{{this.u_city}}</span> </p>
                  <p class="text-muted mb-0"> State <span class="fw-bold text-body">{{this.state}}</span> </p>

                </div>
              </div>
            </div>
            <div class="card-body p-4">
              <div class="d-flex flex-row mb-4 pb-2">
                <div class="flex-fill">
                  <h5 class="bold">{{this.p_name}}</h5>
                  <h4 class="mb-3">Total: {{this.total_amount}}</h4>
                  <p class="text-muted">Payment Mode: <span class="text-body">{{this.payment_mode}}</span></p>
                </div>
                <div>
                  <img class="align-self-center img-fluid"
                    src="data:image/jpeg;base64,{{this.p_image}}" width="250">
                </div>
              </div>
              <ul id="progressbar-1" class="mx-0 mt-0 mb-5 px-0 pt-0 pb-4">
                <li class="step0 active" id="step1"><span style="margin-left: 22px; margin-top: 12px;">{{this.status}}</span>
                </li>
                </ul>
            </div>
            <div class="card-footer p-4">
              <div class="d-flex justify-content-between">
                <h5 class="fw-normal mb-0"><a href="#!" class="cancel" data-or_id="{{this.or_id}}" data-order_date="{{this.order_date}}">Cancel</a></h5>
                <h5 class="fw-normal mb-0"><a href="#!" class="text-muted"><i class="fas fa-ellipsis-v"></i></a>
                </h5>
              </div>
            </div>
          </div>
          
        </div>
         {{/each}}
      </div>
       
    </div>

  </section>
  

 <script src="../js/script.js" defer></script>
 <script src="../js/order.js" defer></script>
  
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


</body>
</html>


